<% provide(:title, "Log in") %>
<div class="justify-content-center">
  <h1 class="mt-3">Log in</h1>
    <div class="row justify-content-center">
      <div class="col-md-6 col-md-offset-3">
      <%= form_for(:session, url: login_path) do |f| %>

        <%= f.email_field :email, placeholder: "メールアドレス", class: 'form-control mt-3' %>

        <%= f.password_field :password, placeholder: "パスワード", class: 'form-control mt-3' %>

        <%= f.submit "Log in", class: "btn btn-primary btn-block rounded-pill mt-3" %>
      <% end %>

      <p class="mt-1">New user? <%= link_to "Sign up now!", signup_path %></p>
    </div>
  </div>
</div>
