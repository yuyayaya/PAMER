<% provide(:title, @user.name) %>
<div class="row">
  <div class="col-md-6">
    <div class="field">
      <%= image_tag @plan.image , class: "mx-auto d-block mt-3 mb-3",
          height: "250", alt: "プラン画像" %>
    </div>
    <div>
      <%= image_tag @user.picture, class: "mx-auto d-block rounded-circle mt-5",
          width: "250", height: "250", alt: "ユーザー画像" %>
    </div>
  </div>

  <div style="height:500px;" class="col-6 border border-secondary mt-3">
    <h5 class="mt-3 mb-3">The name of plan</h5>
    <div class="h-10 col-6 border border-secondary">
      <%= @plan.name %>
    </div>
    <h5 class="mt-3">Plan detail</h5>
    <p class="h-50 border border-secondary mt-3">
      <%= @plan.content %>
    </p>
    <h5 class="mt-3">The name of tag</h5>
    <div class="input-group mb-3 mt-3 border border-secondary">
      <%= @plan.tag %>
    </div>
  </div>
</div>
