<div class="container mt-5">
  <div class="row">
    <div class="col-md-4 ml-5">
      <%= image_tag @user.picture.url, height: "214.5", width: "250" %>
    </div>

    <div class="col-md-7">
      <label class="mr-4 col-sm-2 font-italic">Name</label>/
      <div class="col-sm-5">
        <nobr>
          <span class="mb-2"><%= @user.name %></span>
        </nobr>
      </div>

      <label class="mr-4 col-sm-2 font-italic">University</label>/
      <div class="col-sm-5">
        <nobr>
          <span class="mb-2"><%= @user.university %></span>
        </nobr>
      </div>

      <label class="mr-4 col-sm-2 font-italic">Major</label>/
      <div class="col-sm-5">
        <nobr>
          <span class="mb-2"><%= @user.major %></span>
        </nobr>
      </div>

      <label class="mr-4 col-sm-2 font-italic">Hometown</label>/
      <div class="col-sm-5">
        <nobr>
          <span class="mb-2"><%= @user.hometown %></span>
        </nobr>
      </div>

      <label class="mr-4 col-sm-2 font-italic">Hobby</label>/
      <div class="col-sm-5">
        <nobr>
          <span class="mb-2"><%= @user.hobby %></span>
        </nobr>
      </div>

      <label class="mr-4 col-sm-2 font-italic">Detail</label>/
      <div class="col-sm-8">
        <span class="mb-2 word-break"><%= @user.detail %></span>
      </div>

      <div class="actions">
        <div class="row">
          <div class="col-md-6 col-md-offset6 text-right">
            <%= link_to "to edit page", profile_edit_path, class: "w-100 btn btn-sm btn-primary rounded-pill mt-2" %>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
