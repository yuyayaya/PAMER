<% provide(:title, "Log in") %>
  <h1 class="my-3">Log in</h1>
    <div class="row justify-content-center my-3">
      <div class="col-md-5 col-md-offset-4">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.email_field :email, placeholder: "email", class: "form-control mt-3", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.password_field :password, placeholder: "password", class: "form-control mt-3", autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
        <div class="field mt-2">
          <%= f.label :remember_me, class: "checkbox inline" do %>
            <%= f.check_box :remember_me, checked: false %>
            <span>Remember me</span>
          <% end %>
        </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block rounded-pill my-3" %>
        </div>
        <% end %>

        <%= link_to user_facebook_omniauth_authorize_path,
          class: "btn btn-primary mt-2 rounded-pill" do %>
          <%= image_tag("flogo_RGB_HEX-114.png", alt: "facebook logo",
            width: '35', height: '35', class: "rounded-circle") %>
          Log in with facebook
        <% end %>

    </div>
  </div>
