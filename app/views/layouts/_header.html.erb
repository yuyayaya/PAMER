<header class="navbar navbar-fixed-top navbar-light bg-light">
  <div class="container">
    <%= link_to image_tag("PAM.png", alt: "PAM logo",
             width: '55', height: '50', class: "rounded-circle"), root_path %>
    <nav>
      <ul class="nav nav-tabs">
        <% if logged_in? %>
          <li class="nav-item"><%= link_to "Make Plan", '#' %></li>
        <% end %>
        <li class="nav-item"><%= link_to "Plans", '#', class: "nav-link"%></li>
        <li class="nav-item"><%= link_to "Guides", '#', class: "nav-link"%></li>
        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", '#' %></li>
              <li class="divider"></li>
              <li class="nav-item"><%= link_to "Log out", logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li class="nav-item"><%= link_to "Signup", '#', class: "nav-link"%></li>
          <li class="nav-item"><%= link_to "Login", login_path, class: "nav-link"%></li>
        <% end %>
      </ul>
    </nav>
    </div>
</header>
